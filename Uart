#include <LPC214x.h>

void uart0_init(void)
{
    PINSEL0 |= 0x00000005;
    U0LCR = 0x83;
    U0DLL = 134;
    U0DLM = 1;
    U0LCR = 0x03;
}

void uart0_tx(char ch)
{
    while (!(U0LSR & 0x20));
    U0THR = ch;
}

void uart0_tx_string(char *str)
{
    while (*str)
    {
        uart0_tx(*str++);
    }
}

int main(void)
{
	  VPBDIV=0x01;
    uart0_init();
    uart0_tx_string("Hello World\r\n");
	  while (1);
}
