#include <lpc214x.h>
void delay_ms(unsigned int ms){
	T0TC = 0;
	T0PC = 0;
	T0PR = 12000-1;
	T0TCR = 0X01;
	while(T0TC<ms);
	T0TCR = 0X00;
}

void delay(unsigned int s){
	while(s--){
		delay_ms(1000);
	}
}

int main(){
	IO0DIR |= (0<<4);
	while(1){
		IO0SET |= (0<<4);
		delay(24*60*60);
		IO0SET |= (0<<4);
		delay(24*60*60);
	}
}
